
#include <iostream>

using namespace std;
enum class Type: int_8
{
    EMPTY 
    PAWN
    KNIGHT
    BISHOP
    ROOK
    QUEEN
    KING
}
int main()
{
        enum class Type: int_8
    {
        EMPTY 
        PAWN
        KNIGHT
        BISHOP
        ROOK
        QUEEN
        KING;
    }
     Type color = Type::EMPTY;
     std::cout << static_cast<int_8>(color); // результатом будет 1

    return 0;
}
